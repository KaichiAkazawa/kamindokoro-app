<%= render "shared/header"  %>

<%= form_with model: @store, url: store_path, class: "registration-main", local: true do |f| %>

<div class="form-wrap">
  <div class="form-header">
    <h4 class="form-header-text">店舗情報を編集する</h2>
  </div>

<%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">お店の写真をアップロード</label>
    </div>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">店舗名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :name, class: "input-default" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">住所</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :adress, class: "input-default" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">最寄駅</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :station, placeholder: "例）渋谷駅", class: "input-default" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">料金（1Hあたり）</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :price, class: "input-default" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">営業時間</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :store_time, placeholder: "例) 平日：10:00-20:00  土日祝：10:00-2200", class: "input-default" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">店舗のホームページURL</label>
    </div>
    <%= f.url_field :link, class: "input-default" %>
  </div>

  <div class="form-group">
    <div class="form-text-wrap">
      <label class="form-text">タグ</label>
    </div>
    <% word_str = @store.tags.pluck(:word).join(',') %>
    <%= f.text_field :word, value: word_str, class: "input-default"   %>
  </div>

  <div class="register-btn">
    <%= f.submit "登録する", class: "register-btn-item" %>
  </div>
</div>

<% end %>

<%= render "shared/footer"  %>