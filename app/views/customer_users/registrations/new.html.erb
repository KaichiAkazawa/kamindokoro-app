<%= render "shared/header"  %>

<%= form_with model: @customer_user, url: customer_user_registration_path, class: "registration-main", local: true do |f| %>
  
  <div class="form-wrap">
    <div class="form-header">
      <h4 class="form-header-text">ユーザー情報入力</h4>
    </div>

    <%= render "customer_users/shared/error_messages", model: f.object %>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">ユーザー名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, id: "name", placeholder: "ユーザー名", class: "input-default" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, id: "email", placeholder: "メールアドレス", class: "input-default" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, id: "password", placeholder: "6文字以上", class: "input-default" %>
    </div>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード（確認）</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, id:"password-confirmation", placeholder: "同じパスワードを入力して下さい", class: "input-default" %>
    </div>

    <div class="register-btn">
      <%= f.submit "登録", class: "register-btn-item" %>
    </div>
  </div>
<% end %>

<%= render "shared/footer"  %>